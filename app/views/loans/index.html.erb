<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Check in</th>
      <th>Check out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.user_id %></td>
        <td><%= loan.book_id %></td>
        <td><%= loan.check_in %></td>
        <td><%= loan.check_out %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

