<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h2>Book loan requests can be made through the LibApp site</h2>
<h3>All available books can be searched for here<br>
Make changes to your account as well</h3>


</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Authors</th>
      <% if user_signed_in? && current_user.admin? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= link_to book.title, book  %></td>
        <td><%= book.authors %></td>
        <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-link" %></td>
        <% end %>
        <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.admin? %>
<%= link_to 'New Book', new_book_path, class: "btn btn-link" %>
<% end %>
<%= image_tag "https://s3.eu-west-2.amazonaws.com/mylibrary-1224347/uploads/library.jpg" %>